  <script>
    import { supabase, type Lab, type LabApplicant } from '../../lib/supabase';

    let currentUser: any = null;
    let labId: string = '';

    async function init() {
      // URLã‹ã‚‰IDã‚’å–å¾—
      const pathParts = window.location.pathname.split('/');
      labId = pathParts[pathParts.length - 1];

      const { data: { session } } = await supabase.auth.getSession();
      
      if (!session) {
        window.location.href = '/';
        return;
      }

      currentUser = session.user;

      if (!currentUser.email?.endsWith('@u.tsukuba.ac.jp')) {
        alert('ç­‘æ³¢å¤§å­¦ã®ãƒ¡ãƒ¼ãƒ«ã‚¢ãƒ‰ãƒ¬ã‚¹ã®ã¿åˆ©ç”¨å¯èƒ½ã§ã™');
        await supabase.auth.signOut();
        window.location.href = '/';
        return;
      }

      await loadLabDetail();

      document.getElementById('loading')!.style.display = 'none';
      document.getElementById('content')!.style.display = 'block';
    }

    async function loadLabDetail() {
      // ç ”ç©¶å®¤æƒ…å ±å–å¾—
      const { data: lab, error: labError } = await supabase
        .from('labs')
        .select('*')
        .eq('id', labId)
        .single();

      if (labError || !lab) {
        alert('ç ”ç©¶å®¤ãŒè¦‹ã¤ã‹ã‚Šã¾ã›ã‚“');
        window.location.href = '/dashboard';
        return;
      }

      // å¸Œæœ›è€…æƒ…å ±å–å¾—
      const { data: applicants, error: applicantsError } = await supabase
        .from('view_lab_applicants')
        .select('*')
        .eq('lab_id', labId)
        .order('rank');

      if (applicantsError) {
        console.error('å¸Œæœ›è€…ãƒ‡ãƒ¼ã‚¿å–å¾—ã‚¨ãƒ©ãƒ¼:', applicantsError);
        return;
      }

      displayLabInfo(lab, applicants || []);
    }

    function displayLabInfo(lab: Lab, applicants: LabApplicant[]) {
      // ç ”ç©¶å®¤åŸºæœ¬æƒ…å ±
      document.getElementById('lab-name')!.textContent = lab.name;
      document.getElementById('lab-major')!.textContent = lab.major;
      document.getElementById('lab-professor')!.textContent = lab.professor || 'æœªå®š';
      document.getElementById('capacity')!.textContent = `${lab.capacity}å`;
      document.getElementById('applicant-count')!.textContent = `${applicants.length}å`;
      
      const ratio = applicants.length / lab.capacity;
      const ratioElement = document.getElementById('ratio')!;
      ratioElement.textContent = `${ratio.toFixed(2)}å€`;
      
      if (ratio >= 1.5) ratioElement.className = 'stat-value status-high';
      else if (ratio >= 1) ratioElement.className = 'stat-value status-medium';
      else ratioElement.className = 'stat-value status-low';

      // è‡ªåˆ†ã®çŠ¶æ³
      const myData = applicants.find(a => a.id === currentUser.id);
      if (myData) {
        document.getElementById('my-status')!.style.display = 'block';
        document.getElementById('my-rank')!.textContent = `${myData.rank}ä½ / ${applicants.length}å`;
        document.getElementById('my-gpa')!.textContent = myData.gpa.toFixed(2);
        
        const statusText = document.getElementById('my-status-text')!;
        if (myData.rank <= lab.capacity) {
          statusText.textContent = 'âœ… åˆæ ¼åœå†…';
          statusText.className = 'status-value status-safe';
        } else {
          statusText.textContent = 'âš ï¸ å®šå“¡ã‚ªãƒ¼ãƒãƒ¼';
          statusText.className = 'status-value status-danger';
        }
      }

      // å¸Œæœ›è€…ãƒ†ãƒ¼ãƒ–ãƒ«
      const tbody = document.getElementById('applicants-body')!;
      tbody.innerHTML = applicants.map(applicant => {
        const isMe = applicant.id === currentUser.id;
        const isWithinCapacity = applicant.rank <= lab.capacity;
        let rowClass = '';
        let statusBadges = '';
        
        if (isMe) {
          rowClass = 'my-row';
          statusBadges = '<span class="badge-me">ã‚ãªãŸ</span>';
        }
        
        if (isWithinCapacity) {
          statusBadges += '<span class="badge-safe">åˆæ ¼åœå†…</span>';
        } else {
          statusBadges += '<span class="badge-danger">å®šå“¡ã‚ªãƒ¼ãƒãƒ¼</span>';
        }

        return `
          <tr class="${rowClass}">
            <td>${applicant.rank}ä½</td>
            <td>${applicant.gpa.toFixed(2)}</td>
            <td class="status-badges">${statusBadges}</td>
          </tr>
        `;
      }).join('');

      // GPAåˆ†å¸ƒã‚°ãƒ©ãƒ•
      displayGPADistribution(applicants, lab.capacity);
    }

    function displayGPADistribution(applicants: LabApplicant[], capacity: number) {
      const container = document.getElementById('gpa-distribution')!;
      
      if (applicants.length === 0) {
        container.innerHTML = '<p class="no-data">å¸Œæœ›è€…ãŒã„ã¾ã›ã‚“</p>';
        return;
      }

      const bins = [
        { min: 4.0, max: 4.31, label: '4.0-4.3' },
        { min: 3.5, max: 4.0, label: '3.5-4.0' },
        { min: 3.0, max: 3.5, label: '3.0-3.5' },
        { min: 2.5, max: 3.0, label: '2.5-3.0' },
        { min: 2.0, max: 2.5, label: '2.0-2.5' },
        { min: 0, max: 2.0, label: '0-2.0' }
      ];

      const distribution = bins.map(bin => {
        const count = applicants.filter(a => a.gpa >= bin.min && a.gpa < bin.max).length;
        return { ...bin, count };
      });

      const maxCount = Math.max(...distribution.map(d => d.count), 1);

      container.innerHTML = distribution.map(d => {
        const percentage = (d.count / maxCount) * 100;
        return `
          <div class="bar-container">
            <div class="bar-label">${d.label}</div>
            <div class="bar-wrapper">
              <div class="bar" style="width: ${percentage}%"></div>
              <span class="bar-count">${d.count}å</span>
            </div>
          </div>
        `;
      }).join('');
    }

    // æˆ»ã‚‹ãƒœã‚¿ãƒ³
    document.getElementById('back-btn')?.addEventListener('click', () => {
      window.location.href = '/dashboard';
    });

    // ãƒ­ã‚°ã‚¢ã‚¦ãƒˆ
    document.getElementById('logout-btn')?.addEventListener('click', async () => {
      await supabase.auth.signOut();
      window.location.href = '/';
    });

    init();
  </script>
